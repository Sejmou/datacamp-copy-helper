{
  "manifest_version": 2,
  "name": "DataCamp copy helper",
  "description": "Adds features to easily contents of courses on DataCamp",
  "version": "1.0",
  "icons": {
    "16": "img/icon-16.png",
    "48": "img/icon-48.png",
    "128": "img/icon-128.png"
  },
  "browser_action": {
    "default_icon": "img/icon-19.png",
    "default_popup": "popup/popup.html"
  },
  "permissions": [
    "https://*.datacamp.com/*",
    "activeTab",
    "clipboardWrite",
    "clipboardRead"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*.datacamp.com/*"
      ],
      "js": [
        "src/import-modules.js"
      ],
      "all_frames": true
    }
  ],
  "background": {
    "scripts": [
      "hot-reload.js",
      "src/background.js"
    ]
  },
  "web_accessible_resources": [
    "src/background.js",
    "src/copy-helper/copy-helper.js",
    "src/copy-helper/other/code-quick-copy.js",
    "src/copy-helper/other/slide-image-view-features.js",
    "src/copy-helper/page-crawlers/code-exercise/code-and-output-extract/get-console-out.js",
    "src/copy-helper/page-crawlers/code-exercise/code-and-output-extract/get-editor-code.js",
    "src/copy-helper/page-crawlers/code-exercise/code-and-output-extract/get-instructions.js",
    "src/copy-helper/page-crawlers/code-exercise/code-and-output-extract/index.js",
    "src/copy-helper/page-crawlers/code-exercise/code-and-output-extract/util.js",
    "src/copy-helper/page-crawlers/code-exercise/index.js",
    "src/copy-helper/page-crawlers/course-overview.js",
    "src/copy-helper/page-crawlers/drag-drop.js",
    "src/copy-helper/page-crawlers/multiple-choice.js",
    "src/copy-helper/page-crawlers/video-iframe.js",
    "src/copy-helper/page-crawlers/video-page.js",
    "src/import-modules.js",
    "src/keyboard-shortcuts/keyboard-shortcuts.js",
    "src/util/dom.js",
    "src/util/markdown-conversion.js",
    "src/util/other.js",
    "src/util/shared.js",
    "src/util/strings.js"
  ]
}