{
  "manifest_version": 2,
  "name": "DataCamp copy helper",
  "description": "Adds features to easily contents of courses on DataCamp",
  "version": "1.0",
  "icons": {
    "16": "img/icon-16.png",
    "48": "img/icon-48.png",
    "128": "img/icon-128.png"
  },
  "browser_action": {
    "default_icon": "img/icon-19.png",
    "default_popup": "popup/popup.html"
  },
  "permissions": [
    "https://*.datacamp.com/*",
    "activeTab",
    "clipboardWrite"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*.datacamp.com/*"
      ],
      "js": [
        "copy-helper/import-copy-helper.js"
      ],
      "all_frames": true
    }
  ],
  "background": {
    "scripts": [
      "hot-reload.js"
    ]
  },
  "web_accessible_resources": [
    "copy-helper/copy-helper.js",
    "copy-helper/import-copy-helper.js",
    "copy-helper/page-crawlers/code-exercise/index.js",
    "copy-helper/page-crawlers/course-overview.js",
    "copy-helper/page-crawlers/drag-drop.js",
    "copy-helper/page-crawlers/multiple-choice.js",
    "copy-helper/page-crawlers/video-iframe.js",
    "copy-helper/page-crawlers/video-page.js",
    "copy-helper/util/dom.js",
    "copy-helper/util/markdown-conversion.js",
    "copy-helper/util/strings.js"
  ]
}